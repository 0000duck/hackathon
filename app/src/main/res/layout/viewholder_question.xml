<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:layout_marginBottom="1dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorWhite">

    <TextView
        android:id="@+id/viewholder_question_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@color/colorAccent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:padding="5dp"
        android:text="15"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        tools:ignore="HardcodedText"/>

    <TextView
        android:id="@+id/viewholder_question_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="3dp"
        android:layout_toEndOf="@+id/viewholder_question_score"
        android:text="Can we win the hackathon with our app?"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        tools:ignore="HardcodedText"/>

    <TextView
        android:id="@+id/viewholder_question_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/viewholder_question_tags"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="Tue, 7-11-2017"
        android:textColor="@color/colorGreyDark"
        android:textSize="12sp"
        tools:ignore="HardcodedText"/>

    <TextView
        android:id="@+id/viewholder_question_tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/viewholder_question_title"
        android:layout_below="@+id/viewholder_question_title"
        android:layout_toStartOf="@+id/viewholder_question_date"
        android:text="Hackathon, Keba, Tabakfabrik"
        android:textColor="@color/colorGreyDark"
        android:textSize="12sp"
        tools:ignore="HardcodedText"/>

</RelativeLayout>

